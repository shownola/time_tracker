<% if flash[:alert] %>
	  <%= js add_gritter(flash[:alert], title: "Time_Tracker App Alert", sticky: false) %>
<% elsif flash[:error] %>
	  <%= js add_gritter(flash[:error], title: "Time_Tracker App Error", sticky: false) %>
<% else %>
	  <%= js add_gritter(flash[:notice], title: "Time_Tracker App Notification", sticky: false) %>
	<% end %>